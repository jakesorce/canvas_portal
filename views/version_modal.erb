<div id="version_modal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Change Ruby Version</h3>
  </div>
  <div class="modal-body center">
    <form id="version_form" class="dialog-top pad-bottom">
      <div class="pad-bottom">
        <div class="btn-group">
          <span class="label label-important">Current Version: <span id="version_info"></span></span>
        </div>
      </div>
      <label id="version-label" class="span2 offset1">Change Version To:</label>
      <div class="btn-group">
        <a id="version_text" class="btn dropdown-toggle span2" data-toggle="dropdown" href="#">
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" id="version_select">
        </ul>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a href="#" id="close_version_modal" class="btn">Close</a>
    <a href="#" id="change_version" class="btn btn-primary">Change Version</a>
  </div>
</div>
